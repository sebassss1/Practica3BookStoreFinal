<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/books_fragment">

    <fragment
        android:id="@+id/books_fragment"
        android:name="com.example.practica3bookstore.ui.books.BooksFragment"
        android:label="fragment_books" >
        <action
            android:id="@+id/action_books_fragment_to_bookSynopsisFragment"
            app:destination="@id/bookSynopsisFragment" />
    </fragment>

    <fragment
        android:id="@+id/all_synopsis_fragment"
        android:name="com.example.practica3bookstore.ui.synopsis.AllSynopsisFragment"
        android:label="fragment_all_synopsis" />

    <fragment
        android:id="@+id/notifications_fragment"
        android:name="com.example.practica3bookstore.ui.notifications.NotificationsFragment"
        android:label="fragment_notifications" />

    <fragment
        android:id="@+id/bookSynopsisFragment"
        android:name="com.example.practica3bookstore.ui.synopsis.BookSynopsisFragment"
        android:label="fragment_book_synopsis" >
        <argument
            android:name="book_arg"
            app:argType="com.example.practica3bookstore.data.Book" />
    </fragment>

</navigation>